{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "layout": {
      "contentSize": "min(calc(100vw - 4rem), 1100px)",
      "wideSize": "min(calc(100vw - 4rem), 1600px)"
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Helvetica",
          "name": "helvetica",
          "slug": "body"
        }
      ],
      "fluid": true,
      "fontSizes": [
        {
          "name": "small",
          "slug": "small",
          "size": "16px",
          "fluid": {
            "min": "16px",
            "max": "18px"
          }
        },

        {
          "name": "medium",
          "slug": "medium",
          "size": "18px",
          "fluid": {
            "min": "18px",
            "max": "20px"
          }
        },
        {
          "name": "large",
          "slug": "large",
          "size": "22px",
          "fluid": {
            "min": "22px",
            "max": "30px"
          }
        },
        {
          "name": "extraLarge",
          "slug": "extra-large",
          "size": "30px",
          "fluid": {
            "min": "30px",
            "max": "50px"
          }
        }
      ]
    },
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "name": "White",
          "slug": "white",
          "color": "#ffffff"
        },
        {
          "name": "Black",
          "slug": "black",
          "color": "#000000"
        }
      ],
      "gradients": []
    }
  },
  "styles": {
    "filter": {
      "duotone": "value"
    },
    "color": {
      "text": "black"
    },
    "spacing": {
      "blockGap": "2rem"
    },

    "typography": {
      "fontFamily": "Helvetica, sans-serif",
      "fontWeight": "400",
      "fontSize": "var(--wp--preset--font-size--small)",
      "fontStyle": "normal",
      "lineHeight": "1.6"
    },

    "blocks": {
      "core/columns": {
        "spacing": {
          "blockGap": "var(--block-gap, 1rem)"
        }
      },
      "core/group": {
        "border": {},
        "color": {},
        "spacing": {},
        "typography": {},
        "elements": {
          "link": {},
          "h1": {},
          "h2": {},
          "h3": {},
          "h4": {},
          "h5": {},
          "h6": {}
        }
      }
    }
  }
}
